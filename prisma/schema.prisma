generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  username   String       @unique
  password   String
  pictureUrl String
  userMovies userMovies[]

  List List[]
  @@map("users")
}

model Movie {
  tmdbId     Int          @id
  title      String
  posterPath String
  userMovies userMovies[]

  listMovies ListMovies[]

  @@map("movies")
}

model userMovies {
  id        Int     @id @default(autoincrement())
  userId    Int
  movieId   Int
  favorite  Boolean @default(false)
  watched   Boolean @default(false)
  watchlist Boolean @default(false)
  movies    Movie   @relation(fields: [movieId], references: [tmdbId])
  users     User    @relation(fields: [userId], references: [id])

  @@map("usersMovies")
}

model List {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  users  User   @relation(fields: [userId], references: [id])

  listMovies ListMovies[]

  @@map("lists")
}

model ListMovies {
  id      Int   @id @default(autoincrement())
  listId  Int
  lists   List  @relation(fields: [listId], references: [id])
  movieId Int
  movies  Movie @relation(fields: [movieId], references: [tmdbId])

  @@map("listMovies")
}
